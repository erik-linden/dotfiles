general {
    output_format = "i3bar"
    colors = true
    interval = 1
    markup = "pango"
}

order += "disk /"
order += "volume master"
order += "path_exists VPN"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "load"
order += "tztime local"

volume master {
    format = "ğŸ•ª %volume"
    format_muted = "ğŸ•¨ (%volume)"
    device = "sysdefault"
    mixer = "Master"
}

wireless _first_ {
    format_up = "â‘ %ip (%essid at%quality - %bitrate / %frequency)"
    format_down = ""
}

ethernet _first_ {
    format_up = "ğŸ–§ %ip (%speed)"
    format_down = ""
}

battery all {
    format = "%status %percentage %remaining (%consumption)"
    format_down = ""
    status_chr = "ğŸ—² CHR"
    status_bat = "ğŸ”‹ BAT"
    status_full = "ğŸ”Œ FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    last_full_capacity = true
    integer_battery_capacity = true
    hide_seconds = true
    threshold_type = percentage
    low_threshold = 30
}

path_exists VPN {
    # path exists when a VPN tunnel launched by nmcli/nm-applet is active
    path = "/proc/sys/net/ipv4/conf/ppp0"
    format = "VPN"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}

load {
    format = "â­ %1min"
}

disk "/" {
    format = "â›ƒ %avail"
}
